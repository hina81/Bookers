<div class="box">
  
  <h1 class="heading">Editing Book</h1>
  

  
  <div class="flash-alert">
    <% if @book.errors.any? %>
      <span class="error-count flash"><strong><%= @book.errors.count %> errors prohibited this book from being saved:</strong></span>
      <ul class="error-contents">
        <% @book.errors.full_messages.each do |message| %>
          <li class="flash"><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  
  <%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
    <p class="edit-text">Title</p>
    <%= f.text_field :title %>
    <p class="edit-text">Body</p>
    <%= f.text_area :body %>
    
    <div><%= f.submit 'Update Book', class: "update" %></div>
  <% end %>

  <div>
    <%= link_to 'Show', book_path(@book.id), class: "button edit-text" %>
    <span class="edit-text">|</span>
    <%= link_to 'Back', books_path, class: "button edit-text" %>
  </div>
</div>
