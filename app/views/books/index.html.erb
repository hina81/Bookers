<div class="index">

  <h1 class="books-heading">Books</h1>
  
  <p>Title</p>
  <p>Body</p>
  
  <% @books.each do |book| %>
  
    <%= book.title %>
    <%= book.body %>
  
    <%= link_to 'Show', book_path(book.id) %>
    <%= link_to 'Edit', book_edit_path(book.id) %>
    <%= link_to 'Destroy', book_destroy_path(book), method: :delete, "data-confirm" => "本当に削除しますか？" %>

  <% end %>

  <h2>New book</h2>

  <%= form_with model: Book.new do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>
  
    <h4>Body</h4>
    <%= f.text_area :body %>
    
    <%= f.submit 'Create Book' %>
  
  <% end %>

</div>